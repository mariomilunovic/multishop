#1
composer create-project laravel/laravel multi-shop

#2 Git
git init

git commit -m "first commit"
git branch -M main
git remote add origin https://github.com/mariomilunovic/multishop.git
git push -u origin main

#3 Tailwind CSS https://tailwindcss.com/docs/guides/laravel
npm install -D tailwindcss postcss autoprefixer
npx tailwindcss init -p

add to tailwind.config.js:
 content: [
    "./resources/**/*.blade.php",
    "./resources/**/*.js",
    "./resources/**/*.vue",
  ],


#4 Alpine.js https://alpinejs.dev/essentials/installation
npm install alpinejs
npm install @alpinejs/persist
npm install @alpinejs/collapse

add to app.js:
import Alpine from 'alpinejs'
import persist from '@alpinejs/persist'
Alpine.plugin(persist)
import collapse from '@alpinejs/collapse'
Alpine.plugin(collapse)
window.Alpine = Alpine
Alpine.start()

#5 Livewire https://laravel-livewire.com/docs/2.x/installation
composer require livewire/livewire
php artisan livewire:publish --config

#6 Tall toasts https://github.com/usernotnull/tall-toasts?ref=madewithlaravel.com
composer require usernotnull/tall-toasts
php artisan vendor:publish --provider="Usernotnull\Toast\ToastServiceProvider" --tag="tall-toasts-config"

add to app.js:
import ToastComponent from '../../vendor/usernotnull/tall-toasts/resources/js/tall-toasts'
Alpine.data('ToastComponent', ToastComponent)

add to tailwind.config.js:
 content: [
   './vendor/usernotnull/tall-toasts/config/**/*.php',
    './vendor/usernotnull/tall-toasts/resources/views/**/*.blade.php',
  ],

#7 Helpers
composer require barryvdh/laravel-debugbar --dev

composer require spatie/laravel-web-tinker --dev
php artisan web-tinker:install

composer require --dev barryvdh/laravel-ide-helper

add to config/app.php:
Barryvdh\LaravelIdeHelper\IdeHelperServiceProvider::class

add to composer.json:
{
  "post-update-cmd": [
    "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
    "@php artisan ide-helper:models -N",
    "@php artisan ide-helper:generate",
    "@php artisan ide-helper:eloquent",
    "@php artisan ide-helper:meta"
    ],
}

php artisan ide-helper:generate
sail artisan ide-helper:model (run after sail is installed)

#8 Laravel Sail
php artisan sail:install
0,3,5,7,8
